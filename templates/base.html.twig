<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}NftBids
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="{{asset('css/base.css')}}">
		<link rel="stylesheet" href="{{asset('css/normalise.css')}}">
		<link
		rel="stylesheet" href="{{asset('css/styles.css')}}">
	{# {% block stylesheets %}{% endblock %} #}
	</head>
	<body>
		{# nav #}
		{% block nav %}
			<nav class="navbar navbar-expand-lg navbar-light bg-light py-2 px-2">
				<div class="container-fluid">
					<a href=""><img class="logo" src="" alt="Logo"></a>

					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" href="{{path('homePage')}}">Home
								</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="">My Nfts</a>
							</li>
							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item">
									<a class="nav-link" href="{{ path('admin') }}">Dashboard Admin</a>
								</li>
							{% endif %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_register' )}}">Inscription</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_login')}}">Sign in</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_logout')}}">Sign out</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		{% endblock nav %}
		{# body #}
		{% block body %}{% endblock body %}
		{# footer #}
		{% block footer %}
			<footer class="">
				<nav class="navbar-expand navbar-light bg-light py-2 px-1">
					<ul class="navbar-nav d-flex justify-content-between">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="">Terms & Conditions
							</a>
						</li>
						<li class="nav-item">
							<a href="{{ path('homePage') }}"><img class="logof" src="{{ asset('images/Logo.png') }}" alt="Logo"></a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{ path('homePage') }}">Home</a>
						</li>
					</ul>
				</nav>
			</footer>
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src="{{asset('js/collection.js')}}" defer></script>
	</body>
</html>

